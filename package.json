{
  "name": "kixxdemo",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --names tailwind,browsersync --prefix-colors blue,green \"npm run dev:css\" \"npm run dev:serve\"",
    "dev:css": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --watch=always",
    "dev:serve": "browser-sync start --server --port 3000 --files \"*.html, dist/*.css\" --no-open",
    "build": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --minify"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.18"
  }
}
